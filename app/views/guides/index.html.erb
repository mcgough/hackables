<div class="page-header">
  <h1>Hackables <small>Getting started guides</small></h1>
</div>

<div class="row">
<div class="col-md-12">
  <table class="table table-striped">
    <thead><tr><th><b>Guide Title</b></th>
    <th><b>About</b></th><th><b>Tags</b></th>
    <th></th>
    </tr></thead>
    <% @guides.each do |p| %>
      <tr>
      <td><%= link_to p.title, p %></td>
      <td><%= p.description %></td>
      <td>
        <% p.tags.each do |f| %>
        <span class="label label-default"><%= link_to f.name, f%></span>
        <% end %>
      </td>
      <td>
      <%= link_to "<span class='glyphicon glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, guide_path(p.id), :method => :delete, data:{confirm: "Do you want to remove tag from #{p.tags.length} " + "guide".pluralize(p.tags.length) + "."}, :class=>"btn btn-danger btn-xs" %>
      </td>
      </tr>
    <% end %>
  </table>

<%= link_to "<span class='glyphicon glyphicon glyphicon-plus' aria-hidden='true'></span> Add Guide".html_safe, new_guide_path, :class=>"btn btn-default" %>

</div>
</div>