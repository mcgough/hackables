<div class="page-header">
  <h1>Create Guide <small>Make a new guide</small></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_for @guide do |f| %>
    <%= f.text_field :title, label: "Guide Title", :placeholder => "What's the title of this guide?" %>
    <%= f.text_area :description, label: "About Guide", :placeholder => "What is this guide about?" %>
    <%= f.submit %>
    <% end %>
  </div>
</div>